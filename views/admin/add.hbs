<div class="container text-center col-md-6">
  <form action="/product/add" method="post">
    <h1 class="text text-primary text-uppercase">Add new product</h1>

    <label for="">Name</label><br>
    <input class="form-control"type="text" name="name"><br><br>
    <label for="">Image</label><br>
    <input class="form-control" type="url" name="imageUrl" ><br><br>
    <label for="">Decriptions</label><br>
    <input class="form-control"type="text" name="description"><br><br>
    
    <label for="">Price</label><br>
    <input class="form-control" type="number" name="price"><br><br>
    
    
    <label for="boy">Children Gender</label><br>
    <select name="gender" id=""  >
      <option value="Boy">Boy</option>
      <option value="Girl">Girl</option>
    </select>
<br><br>

<br><br>
    <label for="">Category</label><br>
    <select class="form-control" name="category" id="">
        {{#each categories }}
          <option value={{ _id }}>{{ name }}</option>  
        {{/each}}
        
    </select>
    <br><br>
    <br><br>
    <input type="submit" value="Add">
  </form>
</div>